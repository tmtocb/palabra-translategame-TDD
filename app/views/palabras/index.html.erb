<h1>Total Palabras: <%= @palabras.count %></h1>

 <table class="table table-dark">
  <tr>
    <th>Content</th>
    <th>Language</th>
    <th>Links</th>
  </tr>
  <% @palabras.each do |palabra| %>
  <tr>
    <td><%= palabra.content %></td>
    <td>.</td>
    <td><%= link_to 'Show', palabra_path(palabra) %></td>
  </tr>
  <% end %>
</table>