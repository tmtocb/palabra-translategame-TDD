  <h2 class="mt-3">All Palabras </h2>
    <div class="row">
  <div class="col-md-9">
  </div>
  <div class="col-md-3">
      <%= paginate @palabras, theme: 'twitter-bootstrap-4', class: 'styyle' %>
   </div>
 <table class="table table-blue">
  <tr>
    <th>Palabra</th>
    <th>Language</th>
    <th>By:</th>
    <th>Translations</th>
    <th>Actions</th>
  </tr>
  <% @palabras.each do |palabra| %>
  <tr>
    <td><%= palabra.content %></td>
    <td><%= palabra.language.name %></td>
    <td><%= palabra.user.secret_email %></td>
    <td><%= palabra.translations.size %></td>
    <td><%= link_to palabra_path(palabra) do %>
      <i class="far fa-eye"></i>
    <% end %>
    <% if policy(palabra).edit? %>
      <%= link_to edit_palabra_path(palabra) do %>
        <i class="fas fa-highlighter"></i>
      <% end %>
    <% end %>
    <% if policy(palabra).destroy? %>
      <%= link_to palabra_path(palabra), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="far fa-minus-square"></i>
      <% end %></td>
    <% end %>
  </tr>
  <% end %>
</table>
