<h1>Palabras:</h1>

<%= paginate @palabras, theme: 'twitter-bootstrap-4' %>

 <table class="table table-dark">
  <tr>
    <th>Content</th>
    <th>Language</th>
    <th>Author</th>
    <th>Translations</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Remove</th>
  </tr>
  <% @palabras.each do |palabra| %>
  <tr>
    <td><%= palabra.content %></td>
    <td><%= palabra.language.name %></td>
    <td><%= palabra.user&.email %></td>
    <td><%= palabra.translations.size %></td>
    <td><%= link_to 'Show', palabra_path(palabra) %></td>
    <td><%= link_to 'Edit', edit_palabra_path(palabra) %></td>
    <td><%= link_to 'Delete', palabra_path(palabra), method: :delete, data: { confirm: 'Are you sure?' }%></td>
  </tr>
  <% end %>
</table>

<%= paginate @palabras, theme: 'twitter-bootstrap-4' %>